<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="org.weather.kweatherapp.MainActivity">

    <org.weather.kweatherapp.forecast.WeatherForecastBackground
        android:id="@+id/weather_forecast"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <org.weather.kweatherapp.weather.WeatherWidget
        android:id="@+id/current_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <org.weather.kweatherapp.forecast.WeatherForecastWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />
</RelativeLayout>
